<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_cash_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/dp_12"
        android:text="ssssss"
        android:textColor="@color/font_333333"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cash_time"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_7"
        android:textColor="@color/font_999999"
        android:textSize="@dimen/text_size_12" />


    <TextView
        android:id="@+id/tv_cash_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_bank_name"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_cash_time"
        android:layout_marginRight="@dimen/dp_13"
        android:gravity="center"
        android:text="666"
        android:textColor="@color/font_333333"
        android:textSize="@dimen/text_size_18" />


</RelativeLayout>