<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fafafa"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_14"
    android:paddingTop="@dimen/dp_12">

    <TextView
        android:id="@+id/tv_money_detail_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="周五"
        android:textColor="@color/font_999999"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_money_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_money_detail_week"
        android:layout_marginTop="@dimen/dp_12"
        android:text="01-06"
        android:textColor="@color/font_999999"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/tv_deal_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_toRightOf="@id/tv_money_detail_week"
        android:textColor="@color/font_333333"
        android:textSize="@dimen/text_size_18" />

    <TextView
        android:id="@+id/tv_star_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_money_detail_date"
        android:layout_alignLeft="@id/tv_deal_money"
        android:text="xxxxx明星"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tv_money_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_money_detail_week"
        android:layout_alignParentRight="true"
        android:text="14:13:11"
        android:textColor="@color/font_999999"
        android:textSize="@dimen/text_size_11" />

    <TextView
        android:id="@+id/tv_trust_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_money_detail_date"
        android:layout_alignParentRight="true"
        android:text="委托成功"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp_12" />

</RelativeLayout>